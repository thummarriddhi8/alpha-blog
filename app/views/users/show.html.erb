<h1 class="text-center"><%= @user.username %>'s profile</h1>
<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= gravatar_for @user, size: 150 %>
	</div>
</div>
<% if logged_in? && current_user == @user %>
	<div class="text-center mt-10">
		<%= link_to 'Edit profile', edit_user_path(@user), class: 'btn btn-info info-outline' %>
	</div>
<% end %>
<h4 class="text-center">Articles</h4>
<div class="center">
	<%= will_paginate @user_articles %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="center">
	<%= will_paginate @user_articles %>
</div>
